<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.genlz.jetpacks.ui.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.genlz.jetpacks.ui.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

    </fragment>

    <dialog
        android:id="@+id/FirstFragmentDialog"
        android:name="com.genlz.jetpacks.ui.BottomDialogFragment"
        tools:layout="@layout/bottom_sheet_layout">

        <action
            android:id="@+id/showDialog"
            app:destination="@id/SecondFragment" />

        <argument
            android:name="titles"
            app:argType="string[]" />
    </dialog>

</navigation>